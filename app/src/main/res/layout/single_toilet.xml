<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="250dp"
        app:cardBackgroundColor="@color/white">



        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/chisholm_hall_855"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chisholm Hall Toilet"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:background="#808080"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        >


        <ImageView
            android:id="@+id/star1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/star2"
            tools:srcCompat="@android:drawable/btn_star_big_on" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            android:id="@+id/star2"
            android:layout_toLeftOf="@id/star3"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_centerHorizontal="true"
            android:id="@+id/star3" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            android:layout_toRightOf="@id/star3"
            android:id="@+id/star4"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_toRightOf="@id/star4"
            android:id="@+id/star5"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/white">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="250dp"
                            android:id="@+id/review1Image"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                tools:srcCompat="@drawable/johnsmith" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:id="@+id/review1Name"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/review1Image"
                            android:text="John Smith"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="10sp"
                            android:layout_height="20dp"
                            android:id="@+id/review1Text"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/review1Image"
                            android:layout_below="@id/review1Name"
                            android:text="This toilet is utterly preposterous!"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@android:drawable/btn_star_big_on"
                            android:id="@+id/review1Star1"
                            android:layout_toRightOf="@id/review1Name"
                            android:layout_above="@id/review1Text"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@android:drawable/btn_star_big_off"
                            android:id="@+id/review1Star2"
                            android:layout_toRightOf="@id/review1Star1"
                            android:layout_above="@id/review1Text"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@android:drawable/btn_star_big_off"
                            android:id="@+id/review1Star3"
                            android:layout_toRightOf="@id/review1Star2"
                            android:layout_above="@id/review1Text"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@android:drawable/btn_star_big_off"
                            android:id="@+id/review1Star4"
                            android:layout_toRightOf="@id/review1Star3"
                            android:layout_above="@id/review1Text"/>
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleX="0.75"
                            android:scaleY="0.75"
                            android:src="@android:drawable/btn_star_big_off"
                            android:id="@+id/review1Star5"
                            android:layout_toRightOf="@id/review1Star4"
                            android:layout_above="@id/review1Text"/>
                    </RelativeLayout>






                </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/white">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="250dp"
                        android:id="@+id/review2Image"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/johnsmith" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:id="@+id/review2Name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/review2Image"
                        android:text="John Smith"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:layout_height="20dp"
                        android:id="@+id/review2Text"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/review2Image"
                        android:layout_below="@id/review2Name"
                        android:text="This toilet is utterly life changing!"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review2Star1"
                        android:layout_toRightOf="@id/review2Name"
                        android:layout_above="@id/review2Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review2Star2"
                        android:layout_toRightOf="@id/review2Star1"
                        android:layout_above="@id/review2Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review2Star3"
                        android:layout_toRightOf="@id/review2Star2"
                        android:layout_above="@id/review2Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review2Star4"
                        android:layout_toRightOf="@id/review2Star3"
                        android:layout_above="@id/review2Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review2Star5"
                        android:layout_toRightOf="@id/review2Star4"
                        android:layout_above="@id/review2Text"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/white">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="250dp"
                        android:id="@+id/review3Image"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@drawable/ender_dragon" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="20dp"
                        android:id="@+id/review3Name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/review3Image"
                        android:text="The Ender Dragon"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="10sp"
                        android:layout_height="20dp"
                        android:id="@+id/review3Text"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/review3Image"
                        android:layout_below="@id/review3Name"
                        android:text="This toilet was very clean. Good job Chisholm Hall!"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review3Star1"
                        android:layout_toRightOf="@id/review3Name"
                        android:layout_above="@id/review3Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review3Star2"
                        android:layout_toRightOf="@id/review3Star1"
                        android:layout_above="@id/review3Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review3Star3"
                        android:layout_toRightOf="@id/review3Star2"
                        android:layout_above="@id/review3Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_on"
                        android:id="@+id/review3Star4"
                        android:layout_toRightOf="@id/review3Star3"
                        android:layout_above="@id/review3Text"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleX="0.75"
                        android:scaleY="0.75"
                        android:src="@android:drawable/btn_star_big_off"
                        android:id="@+id/review3Star5"
                        android:layout_toRightOf="@id/review3Star4"
                        android:layout_above="@id/review3Text"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>